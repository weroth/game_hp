<%= form_for(@product) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
            
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Enter a title for the product..." %>
    
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe the product..." %>
    
    <%= f.label :release_date %>
    <%= f.text_field :release_date %>
    
    <%= f.label :platform %>
    <%= f.text_field :platform %>
    
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <%= f.submit "Create product", class: "btn btn-large btn-primary" %>
<% end %>